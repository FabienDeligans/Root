@page "/"


<button class="btn btn-info btn-sm" @onclick="GenerateData">Generate Data</button>
<button class="btn btn-danger btn-sm" @onclick="DropData">Drop Data</button>

<div class="container">
    <div class="row">

        <div class="col-6">
            <button class="btn btn-dark btn-sm" @onclick="GetFullFamily">Get family and all his entities linked</button>
            @if (Family != null)
            {
                <li>
                    <ul>@Family.Name</ul>
                    <ul>@Family.Id</ul>
                    <ul>
                        <li>
                            Children =
                        </li>
                        @foreach (var child in Family.Children)
                        {
                            <ul>@child.Id</ul>
                        }
                    </ul>
                    <ul>
                        <li>
                            Parents =
                        </li>
                        @foreach (var parent in Family.Parents)
                        {
                            <ul>@parent.Id</ul>
                            <ul>@parent.FirstName</ul>
                        }
                    </ul>
                </li>
            }
        </div>
        <div class="col-6">
            <button class="btn btn-dark btn-sm" @onclick="GetFullParent">Get parent with his family linked</button>
        </div>
    </div>
</div>